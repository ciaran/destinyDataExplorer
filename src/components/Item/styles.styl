$iconSize = 3.125em;
$substituteColour = #494A4C

.root
  content: 'hello'
  display: flex
  color: inherit
  text-decoration: none
  position: relative
  z-index: 2

  > *
    position: relative
    z-index: 2

  &:before
    content: ''
    position: absolute
    top: -1px
    left: -1px
    bottom: -1px
    right: -1px
    background: rgba(#FAFAFA, 0)
    border-radius: 2px

.collected
  composes: root
  color: #090B0E

  &:before
    background: #FAFAFA

  .icon
    background: #090B0E
    border-radius: 2px

.accessory
  margin-right: 10px

.icon
  height: $iconSize
  display: block

.substituteIcon
  height: $iconSize
  width: $iconSize
  display: flex
  align-items: center
  justify-content: center
  border: 2px solid $substituteColour
  color: lighten($substituteColour , 50%)
  font-size: 20px

.main
.name
.itemType
  white-space: nowrap
  overflow: auto
  text-overflow: ellipsis

.itemType
  opacity: .75
  font-size: .85em
